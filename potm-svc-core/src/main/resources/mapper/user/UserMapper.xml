<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.potm.svc.core.infrastructure.user.db.dao.UserDao">

    <select id="getByUsername" resultType="com.example.potm.svc.core.infrastructure.user.db.po.User">
        select a.* from sys_user a
        <where>
            a.username = #{username}
        </where>
    </select>

    <select id="page" resultType="com.example.potm.svc.core.interfaces.operate.vo.UserVO">
        select a.* from sys_user a
        <where>
            <if test="param != null and param.q != null and param.q!=''" >
                and (a.nickname like CONCAT('%',#{param.q},'%'))
            </if>
            <if test="ew != null and ew.sqlSegment != null and ew.sqlSegment != ''" >
                and (${ew.sqlSegment})
            </if>
        </where>
    </select>
</mapper>
